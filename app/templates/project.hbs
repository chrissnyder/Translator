<div class="projects container">
  <h1 class="row">{{model.display_name}}</h1>
  <div class="locales">
    {{view Ember.Select content=locales value=currentLocale prompt="Choose a locale" action=changeLocale}}
  </div>
  
  {{#each field in model.translation.paths}}
    {{render 'field' field}}
  {{/each}}
</div>
