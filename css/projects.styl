.projects
  @extend .col-md-12
  @extend .col-sm-12
  
  h1
    margin: 20px 0 15px 0
    padding: 0 0 4px 2%
    font-size: 30px
    font-weight: 100
    text-shadow: 0 1px 2px #878787
    box-shadow: 0 1px 0 0 rgba(0, 0, 0, 0.13), 0 2px 0 0 rgba(255, 255, 255, 0.87)
  
  .list
    .project
      @extend .col-md-3
      @extend .col-sm-4
      @extend .col-xs-12
      text-align: center
      
      &.disabled
        pointer-events: none
        
        .button
          box-shadow: 0 0 0 1px #999999
          background-color: #CACACA
          cursor: default
      
      .button
        button()
        width: 70%
        max-width: 240px
        margin: 10px 0
        
        &:active
          box-shadow: 0 0 0 1px #333333
          background-color: #EAEAEA
